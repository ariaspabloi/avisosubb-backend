generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// schema.prisma

// User model
model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  phone     String  @unique
  password  String
  instagram String?

  // Posts related to this user
  posts Post[]
}

// Post model
model Post {
  id                Int       @id @default(autoincrement())
  user_id           Int
  title             String
  description       String
  post_date         DateTime  @default(now())
  modification_date DateTime  @updatedAt
  expiration_date   DateTime?
  image_code        String
  status            Boolean
  campus_id         Int
  price             Int

  // User who created this post
  user User @relation(fields: [user_id], references: [id])

  // Campus where this post was created
  campus Campus @relation(fields: [campus_id], references: [id])
}

// Campus model
model Campus {
  id          Int    @id @default(autoincrement())
  campus_name String

  // Posts related to this campus
  posts Post[]
}
